@model IEnumerable<Sitecore.Data.Items.Item>
@using BasicCompany.Feature.Products;
@using BasicCompany.Feature.Products.Extensions;

<div class="container">
	<div class="product-list-columns columns is-multiline">
		@foreach (var product in Model)
		{
			<a href="@Html.Sitecore().ItemUrl(product)" class="column product-list-column is-4-desktop is-6-tablet">
				<div class="card">
					<div class="card-image">
						<figure style="background-image: url(@Html.Sitecore().MediaUrl(Templates.Product.Fields.Image, product))"></figure>
					</div>
					<div class="card-content">
						<div class="content">
							<h4>@Html.Sitecore().Field(Templates.Product.Fields.Title.ToString(), product)</h4>
							<p>@Html.Sitecore().Field(Templates.Product.Fields.ShortDescription.ToString(), product)</p>
						</div>
					</div>
				</div>
			</a>
		}
	</div>
</div>