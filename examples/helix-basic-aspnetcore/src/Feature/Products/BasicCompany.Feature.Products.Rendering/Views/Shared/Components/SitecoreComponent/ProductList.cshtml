@model ProductList


    <div class="container">
        <div class="product-list-columns columns is-multiline">
            @foreach (var product in Model.Products)
            {
                <a href="@product.Url" class="column product-list-column is-4-desktop is-6-tablet">
                    <div class="card">
                        <div class="card-image">
                            <figure style="background-image: url(@product.Image.GetMediaLink(new { mw = 480, @as = false })"></figure>
                        </div>
                        <div class="card-content">
                            <div class="content">
                                <h4 asp-for="@product.Title"></h4>
                                <p asp-for="@product.ShortDescription"></p>
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>